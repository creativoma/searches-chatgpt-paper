---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Searches chatGPT Paper and returns the results" />
    <meta name="keywords" content="HTML, CSS, javaScript, js, astro, gradients, tailwind, tabler-icons, astrobuild, rippleui" />
    <meta name="author" content="Creativoma" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 142, 45, 226;
    --accent-gradient: linear-gradient(
      90deg,
      rgb(var(--accent)),
      #4a00e0 15%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }
  body {
    background-size: 20px 20px;
    background-image: linear-gradient(to right, #4b00e015 1px, transparent 1px),
      linear-gradient(to bottom, #4b00e015 1px, transparent 1px);
    background-position: top center;
    image-rendering: pixelated;
    min-height: 100vh;
  }
  a {
    color: rgb(142, 45, 226) !important;
    font-weight: 600;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .back-gradient {
	background-image: var(--accent-gradient);
	background-size: 600%;
	background-position: 0%;
  }

  pre {
    margin: 10px 0;
    border-radius: 12px;
    padding: 20px;
    background: #2a2c38 !important;
    width: 100%;
    white-space: pre-wrap;
  }

  #markdown h3{
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1em;
    padding: 10px 0;
  }

  #markdown p{
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5em;
    padding: 10px 0;
    text-align: justify;
  }

  #markdown p.date{
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.5em;
    padding: 10px 0;
    text-align: justify;
  }
  #markdown h3.globePregunta {
    padding: 15px 30px;
    border-radius: 0px 30px 30px 30px;
    background-color: #bce4f7;
    width: max-content;
    margin: 20px auto 0 0;
  } 
  
  #markdown h3.globeRespuesta {
    padding: 15px 30px;
    border-radius: 0px 30px 30px 30px;
    background-color: #a8ec73;
    width: max-content;
    margin: 20px auto 0 0;
  }  
</style>
